# create a new post and fill the template
#alias create="sh ~/.postname"

# the contents of ~/.postname:
#!/bin/zsh

postdate=`date "+%Y-%m-%d"`
jekylldate=`date "+%Y-%m-%d"`
read -p "Enter the post name: " post_variable;
read -p "Enter the canvas id: " canvas;
read -p "Enter the category: " category;
touch $postdate-$post_variable.md &&
cat <<EOF > $postdate-$post_variable.md
---
layout: post
date: $jekylldate
title: $post_variable
category: $category
image: /resources/img/
canvas: $canvas
js: /resources/js/exp_/main.js
excerpt: 
--- 
{% prism javascript linenos %}

{% endprism %}
---
EOF
nano $postdate-$post_variable.md
exit 0